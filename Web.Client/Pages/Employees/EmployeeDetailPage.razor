@attribute [Route(HrNavigationRoutes.Employees.EmployeeDetail + "{Id:int}")]
<EditForm EditContext="editContext">
	<FluentValidationValidator />
	<HxFormState>
		<HxCard>
			<BodyTemplate>
				<div>detail</div>
				<div class="row g-4">
					<div>
						<TextBox Data="@Entity.tbxFirstName" />
					</div>
					<div class="col-lg-12">
						<HxInputTextArea Placeholder="Oceňuji... (volitelný text)" @bind-Value="@Entity.FirstName" />
					</div>
				</div>

				<div class="d-flex">
					@if (Entity.UpdatedDtt is not null)
					{
						<small class="text-muted align-self-end">vloženo @Entity.UpdatedDtt.Value.ToString("g")</small>
					}

					<div class="d-lg-flex gap-1 ms-lg-auto flex-grow-1 flex-lg-grow-0">
						<HxButton Color="ThemeColor.Primary"
									 OnValidClick="HandleCreateOrUpdateButtonClick"
									 CssClass="w-100"
									 Text="@(EdittingEntry ? "Uložit" : "Přidat")" />
					</div>
				</div>
			</BodyTemplate>
		</HxCard>
	</HxFormState>
</EditForm>