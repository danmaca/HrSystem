@using DanM.Core.Web.Client.FwPages
@using DanM.HrSystem.Contracts.Employees
@attribute [Route($"{HrNavigationRoutes.Employees.EmployeeDetail}{{{nameof(EntityId)}:int?}}")]
@inherits DetailPageBase<EmployeeDetailData>
<CascadingValue Name="PageShare" Value="@this.CurrentPageShare">
	<DatailMasterpage Data="@Data">
		<ContenTemplate>
			<div class="row g-4">
				<div>
					<TextBox Data="@Data.tbxLastName" />
					<TextBox Data="@Data.tbxFirstName" />
					<TextBox Data="@Data.tbxPersonalNumber" />
				</div>
			</div>

			<div class="d-flex">
				@* @if (Data.UpdatedDtt is not null)
				{
					<small class="text-muted align-self-end">vloženo @Data.UpdatedDtt.Value.ToString("g")</small>
				} *@

				<div class="d-lg-flex gap-1 ms-lg-auto flex-grow-1 flex-lg-grow-0">
					<HxButton Color="ThemeColor.Primary"
									OnValidClick="HandleCreateOrUpdateButtonClick"
									CssClass="w-100"
									Text="@(IsNewEntity ? "Vytvořit" : "Uložit")" />

					<HxButton Color="ThemeColor.Primary"
									OnValidClick="HandleEditable"
									CssClass="w-100"
									Text="Editable" />
				</div>
			</div>
		</ContenTemplate>
	</DatailMasterpage>
</CascadingValue>