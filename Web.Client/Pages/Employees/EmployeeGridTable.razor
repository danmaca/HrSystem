@using DanM.HrSystem.Contracts.Employees
<HxGrid @ref="conGrid"
		  DataProvider="GetGridDataAsync"
		  PageSize="40"
		  FooterRowCssClass="fw-bold"
		  SelectedDataItemChanged="GridItemSelected"
		  TItem="EmployeeGridDto">
	<Columns>
		<HxGridColumn HeaderText="Příjmení"
						  ItemTextSelector="i => i.LastName"
						  SortKeySelector="i => i.LastName"
						  IsDefaultSortColumn="true" />
		<HxGridColumn HeaderText="Jméno"
						  ItemTextSelector="i => i.FirstName"
						  SortKeySelector="i => i.FirstName"
						  IsDefaultSortColumn="true" />

		<HxGridColumn HeaderText="Stav"
						  ItemTextSelector="i => i.State.ToString()"
						  SortKeySelector="i => i.State" />
		@* 		  <HxGridColumn HeaderText="Předběžná částka"
		TItem="ResultItemDto"
		ItemTextSelector='i => $"{(i.ValueSum / grandTotal * budget):n0} Kč"'
		SortKeySelector="i => i.ValueSum"
		FooterText="@($"{budget:n0} Kč")" /> *@
	</Columns>
</HxGrid>