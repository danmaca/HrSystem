@inherits DataControlBase<ListControlData>
<GridView @ref="conGrid"
	Data="@Data"
	DataProvider="GetGridDataAsync"
	TItem="EmployeeGridDto">
	<Columns>
		<GridColumn HeaderText="Příjmení"
						ItemTextSelector="i => i.LastName"
						SortKeySelector="i => i.LastName"
						IsDefaultSortColumn="true" />
		<GridColumn HeaderText="Jméno"
						ItemTextSelector="i => i.FirstName"
						SortKeySelector="i => i.FirstName"
						IsDefaultSortColumn="true" />

		<GridColumn HeaderText="Stav"
						ItemTextSelector="i => i.State.ToString()"
						SortKeySelector="i => i.State" />
