@using DanM.HrSystem.Contracts.Agreements
@using DanM.HrSystem.Web.Client.Controls
<GridView @ref="conGrid"
		  DataProvider="GetGridDataAsync"
		  PageSize="40"
		  FooterRowCssClass="fw-bold"
		  SelectedDataItemChanged="GridItemSelected"
		  TItem="AgreementGridDto">
	<Columns>
		<GridColumn HeaderText="Název"
						  ItemTextSelector="i => i.Name"
						  SortKeySelector="i => i.Name"
						  IsDefaultSortColumn="true" />
		<GridColumn HeaderText="Platnost od"
						  ItemTextSelector="i => i.ValidFrom.ToShortDateString()"
						  SortKeySelector="i => i.ValidFrom" />
		<GridColumn HeaderText="Platnost do"
						  ItemTextSelector="i => i.ValidTo.ToShortDateString()"
						  SortKeySelector="i => i.ValidTo" />
		<GridColumn HeaderText="Zaměstnanec"
						  ItemTextSelector="i => i.OwnerEmployeeFullName"
						  SortKeySelector="i => i.OwnerEmployeeFullName"
						  IsDefaultSortColumn="false" />

		<GridColumn HeaderText="Stav"
						  ItemTextSelector="i => i.State.ToString()"
						  SortKeySelector="i => i.State" />
	</Columns>
</GridView>